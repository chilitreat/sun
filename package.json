    "dayjs": "^1.11.10",
    "hono": "^4.8.12",
    "honox": "^0.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-share": "^5.2.2",
    "typescript": "^5.4.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@hono/vite-cloudflare-pages": "^0.2.4",
    "@hono/vite-dev-server": "^0.20.0",
    "@hono/vite-ssg": "^0.0.1",
    "@mdx-js/rollup": "^3.0.0",
    "@tailwindcss/typography": "^0.5.10",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.17",
    "better-sqlite3": "^9.4.0",
    "postcss": "^8.4.35",
